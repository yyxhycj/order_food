/* pages/cart/cart.wxss */
.container {
  height: 100vh;
  display: flex !important;
  flex-direction: column !important;
  align-items: stretch !important;
  justify-content: flex-start !important;
  padding: 0 !important;
  background-color: #f5f5f5;
  box-sizing: border-box !important;
}

/* 购物车列表样式 */
.cart-list {
  flex: 1;
  padding: 20rpx;
}

.cart-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.product-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.product-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 30rpx;
  font-weight: bold;
  color: #ff6b35;
}

/* 数量控制样式 */
.quantity-control {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 5rpx;
}

.quantity-btn {
  width: 50rpx;
  height: 50rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #3cc51f;
  border: 1rpx solid #3cc51f;
}

.quantity-text {
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  margin: 0 20rpx;
  min-width: 40rpx;
  text-align: center;
}

/* 删除按钮样式 */
.delete-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  width: 30rpx;
  height: 30rpx;
}

/* 空购物车样式 */
.empty-cart {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.go-shopping-btn {
  background-color: #3cc51f;
  color: #fff;
  font-size: 30rpx;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  border: none;
}

/* 结算栏样式 */
.checkout-bar {
  background-color: #fff;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-info {
  display: flex;
  flex-direction: column;
}

.total-text {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.total-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b35;
}

.checkout-btn {
  background-color: #3cc51f;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  border: none;
} 