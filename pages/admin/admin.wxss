/* pages/admin/admin.wxss */
.container {
  height: auto !important;
  min-height: 100vh;
  display: flex !important;
  flex-direction: column !important;
  align-items: stretch !important;
  justify-content: flex-start !important;
  padding: 20rpx !important;
  background-color: #f5f5f5;
  box-sizing: border-box !important;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #ff6b35, #ff8c42);
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  color: #fff;
}

.welcome-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.date-text {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 统计部分 */
.stats-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-item {
  background-color: #f8f9fa;
  padding: 30rpx 20rpx;
  border-radius: 12rpx;
  text-align: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 快捷操作 */
.quick-actions {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.action-item {
  position: relative;
  background-color: #f8f9fa;
  padding: 30rpx 20rpx;
  border-radius: 12rpx;
  text-align: center;
  transition: all 0.3s;
}

.action-item:active {
  background-color: #e9ecef;
  transform: scale(0.98);
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.action-text {
  font-size: 26rpx;
  color: #333;
}

.action-badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background-color: #ff6b35;
  color: #fff;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

/* 最新订单 */
.recent-orders {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
}

.order-list {
  margin-top: 20rpx;
}

.order-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-item:last-child {
  border-bottom: none;
}

.order-info {
  flex: 1;
}

.order-no {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.order-user {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.order-time {
  font-size: 22rpx;
  color: #999;
}

.order-status {
  text-align: right;
}

.status-text {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  margin-bottom: 8rpx;
}

.status-text.pending {
  background-color: #fff3cd;
  color: #856404;
}

.status-text.processing {
  background-color: #d1ecf1;
  color: #0c5460;
}

.status-text.completed {
  background-color: #d4edda;
  color: #155724;
}

.status-text.cancelled {
  background-color: #f8d7da;
  color: #721c24;
}

.order-amount {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff6b35;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
}