/* pages/order/order.wxss */
.container {
  height: auto !important;
  min-height: 100vh;
  display: flex !important;
  flex-direction: column !important;
  align-items: stretch !important;
  justify-content: flex-start !important;
  padding: 0 0 120rpx 0 !important;
  background-color: #f5f5f5;
  box-sizing: border-box !important;
}

/* 订单区块样式 */
.order-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

/* 商品列表样式 */
.product-list {
  margin-top: 20rpx;
}

.product-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: bold;
}

.product-quantity {
  font-size: 26rpx;
  color: #666;
}

/* 文本域样式 */
.textarea {
  width: 100%;
  min-height: 120rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.textarea:focus {
  border-color: #3cc51f;
}

/* 价格明细样式 */
.price-detail {
  margin-top: 20rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.price-item:last-child {
  border-bottom: none;
}

.price-item.total {
  font-weight: bold;
  font-size: 30rpx;
  color: #333;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
  margin-top: 20rpx;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: bold;
}

.price-item.total .price-value {
  font-size: 32rpx;
  color: #333;
}

/* 提交按钮样式 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
  z-index: 1000;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  background-color: #3cc51f;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 10rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn:disabled {
  background-color: #ccc;
  color: #999;
}

.submit-btn:not(:disabled):active {
  background-color: #2aa515;
} 